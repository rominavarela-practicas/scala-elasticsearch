{
  "swagger": "2.0",
  "info": {
    "title": "Jeeves API",
    "description": "Gatling Simulations Runner Service",
    "version": "0.1"
  },
  "schemes": [ "http" ],
  "basePath": "/api",
  "paths": {
    "/query": {
      "get": {
        "tags": [ "Root" ],
        "summary": "The root description",
        "produces": [ "application/json" ],
        "responses": {
          "200": {
            "description": "The root description"
          }
        }
      }
    },
    "/query/_mapping": {
      "get": {
        "tags": [ "Mapping" ],
        "summary": "The root mapping",
        "produces": [ "application/json" ],
        "responses": {
          "200": {
            "description": "The root mapping"
          }
        }
      }
    },
    "/query/{index}/_mapping": {
      "get": {
        "tags": [ "Mapping" ],
        "summary": "The mapping of an index",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The mapping of an index"
          }
        }
      }
    },
    "/query/{index}/_mapping/{type}": {
      "get": {
        "tags": [ "Mapping" ],
        "summary": "The mapping of a type",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The mapping of a type"
          }
        }
      }
    },
    "/query/{index}/{type}": {
      "delete": {
        "tags": [ "Types" ],
        "summary": "Delete a type",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Delete a type"
          }
        }
      }
    },
    "/query/{index}/{type}/{id}": {
      "get": {
        "tags": [ "Types" ],
        "summary": "A typed document",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A typed document"
          }
        }
      },
      "delete": {
        "tags": [ "Types" ],
        "summary": "Delete a typed document",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Delete a typed document"
          }
        }
      }
    },
    "/query/{index}/{type}/_search/{field}": {
      "get": {
        "tags": [ "Types" ],
        "summary": "Search into a collection of typed documents by a mapped field",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "field",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "from",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 0
          },
          {
            "name": "size",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 0
          }
        ],
        "responses": {
          "200": {
            "description": "Search into a collection of typed documents"
          }
        }
      }
    },
    "/query/{index}/{type}/_search": {
      "post": {
        "tags": [ "Types" ],
        "summary": "Search into a collection of typed documents by term key values",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "index",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "type",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
            	"type": "object",
            	"properties": {
            	}
          	}
          },
          {
            "name": "from",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 0
          },
          {
            "name": "size",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 0
          }
        ],
        "responses": {
          "200": {
            "description": "Search into a collection of typed documents"
          }
        }
      }
    }
  }
}
